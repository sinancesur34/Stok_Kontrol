@model EntityLayer.Concrete.Satis
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@using (Html.BeginForm("AddSatis", "Satis", FormMethod.Post))



{
    <div class="form-group">

        @Html.Label("Müşteri ")
        @Html.TextBoxFor(x => x.MusteriID)
        @Html.ValidationMessageFor(x => x.MusteriID)
        <br /><br />
        @Html.Label("Ürün")
        @Html.TextBoxFor(x => x.UrunID)
        @Html.ValidationMessageFor(x => x.UrunID)

        <button>Kaydet</button>
    </div>
}
