@model EntityLayer.Concrete.Musteri
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@using (Html.BeginForm("AddMusteri", "Musteri", FormMethod.Post))



{
    <div class="form-group">

        @Html.Label("Musteri Adı")
        @Html.TextBoxFor(x => x.MusteriAd)
        @Html.ValidationMessageFor(x => x.MusteriAd)
        <br /><br />
        @Html.Label("Musteri Soyadı")
        @Html.TextBoxFor(x => x.MusteriSoyad)
        @Html.ValidationMessageFor(x => x.MusteriSoyad)
        <br /><br />
        @Html.Label("Musteri TCKN")
        @Html.TextBoxFor(x => x.MusteriTCKN)
        @Html.ValidationMessageFor(x => x.MusteriTCKN)
        <button>Kaydet</button>
    </div>
}
