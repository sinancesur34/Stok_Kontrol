@model EntityLayer.Concrete.Urun
@{
    ViewBag.Title = "AddUrun";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

@using (Html.BeginForm("AddUrun", "Urun", FormMethod.Post))
{
    <br />
    <center><h2>Ürün ekle</h2></center>
    <div class="form-group">
        <label>Ürün Ad</label>
        @Html.TextBoxFor(x => x.UrunAd, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.UrunAd)
        <br /><br />

        <label>Fiyat</label>
        @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Fiyat)
        <br /><br />

        <label>Kategori</label>
        @Html.DropDownListFor(x => x.KategoriID, (List<SelectListItem>)ViewBag.vlk, new
        { @class = "form-control" })

       

        @*@Html.TextBoxFor(x => x.KategoriID, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.KategoriID)*@   @*dışarıdan ad kısmını aldıgım için bunu kullanmıyorum*@
        <br /><br />

        <label>Marka</label>
        <select id="Marka" name="Marka">
            <option value="">Seçiniz</option>
            <option value="Vestel">Vestel</option>
            <option value="Arçelik">Arçelik</option>
            <option value="Bosch">Bosch</option>
            <option value="Regal">Regal</option>
            <option value="Beko">Beko</option>
            <option value="Altus">Altus</option>
            <option value="Kumtel">Kumtel</option>
            <option value="AEG">AEG</option>
            <option value="Ariston">Ariston</option>
            <option value="Samsung">Samsung</option>
            <option value="Siemens">Siemens</option>
            <option value="Profilo">Profilo</option>
            <option value="Xiaomi">Xiaomi</option>

        </select>
        @Html.ValidationMessageFor(x => x.Marka)
        <br /><br />

        <label>Stok</label>
        @Html.TextBoxFor(x => x.Stok, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Stok)

        <br /><br />
        <button id="kaydetButton">Kaydet</button>

        <script>
            var kaydetButton = document.getElementById("kaydetButton");
            kaydetButton.style.backgroundColor = "#000000";
            kaydetButton.style.color = "white";
            kaydetButton.style.border = "none";
            kaydetButton.style.padding = "10px 20px";
            kaydetButton.style.borderRadius = "5px";
        </script>
    </div>
}
<h4>Don't tell people your plans, show them your results</h4>
