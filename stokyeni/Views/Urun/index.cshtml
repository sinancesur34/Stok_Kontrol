@using EntityLayer.Concrete
@model List<Urun>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<center><h2>Ürün Listesi</h2></center>
<br />
<div>
    <table class="table table-hover">
        <tr>

            <th>Ürün ID</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Kategori</th>
            <th>Marka</th>
            <th>Stok</th>
            <th></th>
            <th></th>

        </tr>

        @foreach (var item in Model)
        {

            <tr>

                <td>@item.UrunID</td>
                <td>@item.UrunAd</td>
                <td>@item.Fiyat</td>
                <td>@item.Kategori.KategoriAd</td>
                <td>@item.Marka</td>
                <td>@item.Stok</td>
                <td><a href="/Urun/DeleteUrun/@item.UrunID" class="btn btn-danger">Ürün Sil</a></td>
                <td><a href="/Urun/EditUrun/@item.UrunID" class="btn btn-success">Ürün Güncelle</a></td>
            </tr>
        }
    </table>
</div>

<br />
<a href="/Urun/AddUrun" class="btn btn-info">Yeni Ürün</a>



